<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/appwidget_profilepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/ic_popup_reminder" />

    <ImageView
        android:id="@+id/appwidget_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_popup_reminder" />

    <TextView
        android:id="@+id/appwidget_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/appwidget_last_updatedtime"
        android:layout_alignParentRight="true"
        android:text="Chennai TamilNadu"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/appwidget_last_updatedtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="24 Dec 2015"
        android:textColor="@android:color/white" />

</RelativeLayout>